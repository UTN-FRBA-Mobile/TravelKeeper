<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.MyTripsFragment"
        android:paddingBottom="20dp">

    <EditText
            android:id="@+id/trip_name_text"
            android:layout_width="0dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"

            android:hint="@string/new_trip_title"
            android:inputType="text"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/start_date_label"
            android:text="Fecha de Inicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="18dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="10dp"
            android:background="@drawable/squared_light_border_cell"
            app:layout_constraintTop_toBottomOf="@+id/trip_name_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="48dp"/>

    <TextView
            android:id="@+id/end_date_label"
            android:text="Fecha de Fin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="10dp"
            android:background="@drawable/squared_light_border_cell"
            app:layout_constraintTop_toBottomOf="@id/start_date_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="48dp"/>

    <Button
            android:id="@+id/create_button"
            android:text="Crear Viaje"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:background="@drawable/rounded_filled_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/end_date_label"/>

</androidx.constraintlayout.widget.ConstraintLayout>